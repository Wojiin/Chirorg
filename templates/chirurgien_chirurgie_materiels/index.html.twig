{% extends 'base.html.twig' %}

{% block title %}Liste des chirurgiens et associations{% endblock %}

{% block body %}
<h1>Liste des chirurgiens et leurs associations</h1>

<a href="{{ path('app_chirurgien_chirurgie_materiels_new') }}" class="btn btn-success mb-3">Ajouter une liste</a>

{% for chirurgien in data %}
    <h2>{{ chirurgien.chirurgien_prenom }} {{ chirurgien.chirurgien_nom }} ({{ chirurgien.chirurgien_specialite }})</h2>

    {% if chirurgien.chirurgies %}
        <ul>
            {% for chirurgie, materiels in chirurgien.chirurgies %}
                <li>
                    <strong>{{ chirurgie }}</strong>
                    <ul>
                        {% for materiel in materiels %}
                            <li>
                                {{ materiel.materiel_nom }} - {{ materiel.materiel_adresse }}
                                <a href="{{ path('app_chirurgien_chirurgie_materiels_edit', {'id': materiel.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <form action="{{ path('app_chirurgien_chirurgie_materiels_delete', {'id': materiel.id}) }}" method="post" style="display:inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ materiel.id) }}">
                                    <button class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune chirurgie associ√©e</p>
    {% endif %}
{% endfor %}

{% endblock %}
